<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sumitroy.uicheck.ScreenTwo">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp"
        android:padding="15dp"
        android:layout_marginTop="4dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardview1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haircut By Stylist:"
        android:padding="25dp"
        android:id="@+id/textviewHaircutStylist"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
       android:text="600"
        android:id="@+id/Price1"
        android:padding="25dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignRight="@+id/textviewBangalore"
        />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp"
        android:padding="15dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/cardview1"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardview2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haircut By Senior:"
            android:padding="25dp"
            android:id="@+id/textviewHaircutStylistSenior"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="750"
            android:id="@+id/Price2"
            android:padding="25dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textviewBangalore"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp"
        android:padding="15dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/cardview2"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardview3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toatal:"
            android:padding="5dp"
            android:id="@+id/textviewTotal"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Rs.950"
            android:id="@+id/Total"
            android:padding="5dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textviewBangalore"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax:"
            android:padding="5dp"
            android:id="@+id/textviewTax"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Rs.50"
            android:id="@+id/Tax"
            android:padding="5dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textviewBangalore"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount:"
            android:padding="5dp"
            android:id="@+id/textviewDiscount"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="0"
            android:id="@+id/DiscountValue"
            android:padding="5dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textviewBangalore"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax:"
            android:padding="5dp"
            android:id="@+id/textvieFinalTotal"
            android:textSize="15dp"
            android:layout_marginTop="75dp"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="1000"
            android:id="@+id/FinalTotal"
            android:padding="5dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="75dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textviewBangalore"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Discount:"
            android:padding="5dp"
            android:id="@+id/textviewApplyDiscount"
            android:textSize="15dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:layout_marginLeft="115dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Rs.50"
            android:id="@+id/ApplyDiscount"
            android:padding="5dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="100dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_alignRight="@+id/textviewBangalore"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checknone"
            android:text="Cash"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="95dp"
            android:layout_below="@+id/textviewApplyDiscount"
            android:padding="5dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox1"
            android:layout_marginTop="145dp"
            android:text="Card"
            android:layout_below="@+id/textviewApplyDiscount"
            android:layout_toRightOf="@id/checknone"
            android:layout_marginLeft="210dp"
            android:padding="5dp"
            />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:id="@+id/addtocart"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mybutton"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:clickable="true"
            />

        <Button
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:id="@+id/checkout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/mybutton"
            android:text="Close Bill"
            android:textColor="#ffffff"
            android:clickable="true"
            />
    </RelativeLayout>



</RelativeLayout>
